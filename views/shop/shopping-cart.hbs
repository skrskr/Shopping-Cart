<div class="row">
    <div class="col-sm-6  col-md-6 col-md-offset-3 col-sm-offset-3">
        <div class="alert alert-danger" {{#if noError}}hidden{{/if}}>
            {{errMsg}}
        </div>
    </div>
</div>
{{#if products}}
<div class="row">
    <div class="col-sm-6  col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item">
                <span class="badge badge-secondary">{{this.qty}}</span>
                <strong>{{this.item.title}}</strong>
                <span class="label label-success">${{this.price}}</span>

                <div class="btn-group">
                    <button type="button" class="btn btn-primary">Action</button>
                    <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Reduce By 1</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Remove All</a>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6  col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: ${{totalPrice}}</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6  col-md-6 col-md-offset-3 col-sm-offset-3">
        <p {{#if isNotLoggedIn}} '' {{else}}hidden{{/if}}> Please Login to be able to chekcout</p>
        <button id="checkout-btn" class="btn btn-success" {{#if isNotLoggedIn}}disabled{{/if}}>Checkout</button>
    </div>
</div>
<input id="stripe-input" value="{{stripePublicKey}}" hidden />

{{else}}
<div class="row">
    <div class="col-sm-6  col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Item in Cart</h2>
    </div>
</div>
{{/if}}

<script src="https://checkout.stripe.com/checkout.js"></script>